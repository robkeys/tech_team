<div id="filterrific_results">



  <table class='listing' summary='Item list'>
    <tr>
      <th>ID</th>
      <th>Cost</th>
      <th>Domain</th>
      <th>Name</th>
      <th>ipv4</th>
      <th>Mac Address</th>
      <th>Model</th>
      <th></th>
    </tr>
    <% @items.each do |item| %>
    <tr>
      <td><%= item.id %></td>
      <td><%= number_to_currency( item.cost ) %></td>
      <td><%= item.domain %></td>
      <td><%= item.domain_name %></td>
      <td><%= item.ipv4 %></td>
      <td><%= item.mac_address %></td>
      <td><%= item.model %></td>
      <td class="action">
        <%= link_to(image_tag('edit.png', :title => 'View/Edit'), item_path(item)) %>
        <%= link_to(image_tag('garbage.png', :title => 'Delete'), item_path(item),
                    method: :delete, data: {confirm: 'Are you sure?'}) %>
      </td>
    </tr>
    <% end %>
  </table>

  <div class="float-left"><%= will_paginate @items %></div>
  <div class="float-right"><p><%= page_entries_info @items %></p></div>



</div>


