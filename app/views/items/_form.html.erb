
<div class="flex-form-item">
  <h3>Item details:</h3>
  <%= f.label(:model) %>
  <%= f.text_field(:model, :readonly => readable_only) %>
  <%= f.label(:cost) %>
  <%= f.text_field(:cost, :readonly => readable_only) %>
  <%= f.label('Category', :class => 'has-action') %>
  <div class="action in-label">
    <%= button_tag('View/Edit Categories') %>
  </div>
  <%= f.collection_select( :category_id, Category.all, :id, :name, {}, :disabled => readable_only) %>
  <%= f.label(:size) %>
  <%= f.text_field(:size, :readonly => readable_only) %>
  <%= f.label(:serial) %>
  <%= f.text_field(:serial, :readonly => readable_only) %>
</div>
<div class="flex-form-item">
  <h3>Network info:</h3>
  <%= f.label(:domain) %>
  <%= f.select(:domain, ['', 'NINESTAR', 'NINESTARLABS'], {}, :disabled => readable_only) %>
  <%= f.label(:domain_name) %>
  <%= f.text_field(:domain_name, :readonly => readable_only) %>
  <%= f.label(:ipv4) %>
  <%= f.text_field(:ipv4, :readonly => readable_only) %>
  <%= f.label(:ipv6) %>
  <%= f.text_field(:ipv6, :readonly => readable_only) %>
  <%= f.label(:mac_address) %>
  <%= f.text_field(:mac_address, :readonly => readable_only) %>
</div>
<div class="flex-form-item resize">
  <h3>Warranty details:</h3>
  <%= f.label(:warranty_date) %>
  <%= f.text_field(:warranty_date, :readonly => readable_only) %>
  <%= f.label(:warranty_provider) %>
  <%= f.text_field(:warranty_provider, :readonly => readable_only) %>
  <%= f.label(:warranty_num) %>
  <%= f.text_field(:warranty_num, :readonly => readable_only) %>
  <%= f.label(:warranty_email) %>
  <%= f.text_field(:warranty_email, :readonly => readable_only) %>
  <%= f.label(:warranty_phone) %>
  <%= f.text_field(:warranty_phone, :readonly => readable_only) %>
</div>
<div class="flex-form-item resize">
  <%= f.label(:note) %>
  <%= f.text_area(:note, :readonly => readable_only) %>
</div>