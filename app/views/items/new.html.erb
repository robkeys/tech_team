<div class="items new">

  <div class="action back">
    <%= link_to items_path do %>
      <%= image_tag('left-arrow.png') %>
      Return to List
    <% end %>
  </div>

  <br>

  <%= form_for @item do |f| %>
  <div class="flex-form">
    <div class="flex-form-item">
      <%= f.label(:model) %>
      <%= f.text_field(:model) %>
      <%= f.label(:cost) %>
      <%= f.text_field(:cost) %>
      <%= f.label(:size) %>
      <%= f.text_field(:size) %>
      <%= f.label(:serial) %>
      <%= f.text_field(:serial) %>
    </div>
    <div class="flex-form-item">
      <%= f.label(:domain) %>
      <%= f.select(:domain, ['', 'NINESTAR', 'NINESTARLABS']) %>
      <%= f.label(:domain_name) %>
      <%= f.text_field(:domain_name) %>
      <%= f.label(:ipv4) %>
      <%= f.text_field(:ipv4) %>
      <%= f.label(:ipv6) %>
      <%= f.text_field(:ipv6) %>
      <%= f.label(:mac_address) %>
      <%= f.text_field(:mac_address) %>
    </div>
    <div class="flex-form-item resize">
      <%= f.label(:warranty_date) %>
      <%= f.text_field(:warranty_date) %>
      <%= f.label(:warranty_provider) %>
      <%= f.text_field(:warranty_provider) %>
      <%= f.label(:warranty_num) %>
      <%= f.text_field(:warranty_num) %>
      <%= f.label(:warranty_email) %>
      <%= f.text_field(:warranty_email) %>
      <%= f.label(:warranty_phone) %>
      <%= f.text_field(:warranty_phone) %>
    </div>
    <div class="flex-form-item resize">
      <%= f.label(:note) %>
      <%= f.text_area(:note) %>
    </div>
    <div class="flex-form-item submit">
      <%= f.submit("Create Inventory") %>
    </div>
  </div>
  <% end %>

</div>
